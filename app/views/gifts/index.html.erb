<h1>Regalos</h1>

<table>
  <thead>
    <tr>
      <th width="20%">Nombre</th>
      <th width="40%">Descripción</th>
      <th width="30%">Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.name %></td>
        <td><%= gift.description %></td>
        <td><%= image_tag(gift.picture_url, :width => 100) if gift.picture.present? %></td>
        <td><%= link_to 'Mostrar', gift %></td>
        <td><%= link_to 'Editar', edit_gift_path(gift) %></td>
        <td><%= link_to 'Destruir', gift, method: :delete, data: { confirm: '¿Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Regalo', new_gift_path %>
